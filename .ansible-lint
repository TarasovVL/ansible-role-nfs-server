exclude_paths:
  - .git/

skip_list:
  - yaml
  - experimental
  - empty-string-compare
  - meta-no-info
  - fqcn-builtins
# excluded after checking false-positives and fixing
  - unnamed-task
  - risky-shell-pipe
  - role-name
  - command-instead-of-shell
  - literal-compare
  - no-handler
  - no-changed-when
  - no-jinja-nesting

warn_list:
  - ignore-errors
  - risky-file-permissions
  - var-naming
  - command-instead-of-module
  - var-spacing
